<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yizhitong.learnjni.FaceDetectActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/startIdCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="300dp"
        android:layout_height="200dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/disposeIdCard"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/startIdCard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="300dp"
        android:layout_height="200dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/idCardImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/disposeIdCard"/>

</androidx.constraintlayout.widget.ConstraintLayout>
